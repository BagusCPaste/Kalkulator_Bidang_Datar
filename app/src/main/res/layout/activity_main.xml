<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="Panjang / Alas / Diameter"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_panjang"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Input Panjang / Alas / Diameter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="Lebar / Tinggi"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_alas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input Lebar / Tinggi disini "
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_htpersegi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="HitungPersegi"
            android:text="Persegi"/>
        <Button
            android:onClick="HitungSegitiga"
            android:id="@+id/btn_htsegitiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Segitiga"/>
        <Button
            android:onClick="HitungLingkaran"
            android:id="@+id/btn_htlingkaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lingkaran"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLuas"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtKeliling"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>